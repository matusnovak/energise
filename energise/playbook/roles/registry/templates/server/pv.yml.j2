apiVersion: v1
kind: PersistentVolume
metadata:
  name: "{{ common.namespace }}-{{ registry.server.name }}"
  labels:
    {{ service.extraLabels | to_nice_yaml | indent(4) }}
spec:
  storageClassName: "{{ common.storage.class }}"
  capacity:
    storage: "{{ registry.server.storage.capacity }}"
  accessModes:
    - ReadWriteMany
  persistentVolumeReclaimPolicy: Retain
  {{ lookup('template', storage_options_template, template_vars=dict(storage=registry.server.storage)) | indent(2) }}

