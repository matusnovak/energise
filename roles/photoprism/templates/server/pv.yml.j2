apiVersion: v1
kind: PersistentVolume
metadata:
  name: "{{ common.namespace }}-{{ photoprism.server.name }}"
  labels:
    {{ service.extraLabels | to_nice_yaml | indent(4) }}
spec:
  storageClassName: "{{ common.storage.class }}"
  capacity:
    storage: "{{ photoprism.server.storage.capacity }}"
  accessModes:
    - ReadWriteMany
  persistentVolumeReclaimPolicy: Retain
  {{ lookup('template', pv_storage_spec, template_vars=dict(storage=photoprism.server.storage)) | indent(2) }}
