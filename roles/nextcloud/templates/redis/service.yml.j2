apiVersion: v1
kind: Service
metadata:
  name: "{{ nextcloud.redis.name }}"
  namespace: "{{ common.namespace }}"
  labels:
    {{ service.extraLabels | to_nice_yaml | indent(4) }}
{% if nextcloud.redis.serviceLabels -%}
    {{ nextcloud.redis.serviceLabels | to_nice_yaml | indent(4) }}
{%- endif %}
{% if nextcloud.redis.serviceAnnotations -%}
  annotations:
    {{ nextcloud.redis.serviceAnnotations | to_nice_yaml | indent(4) }}
{%- endif %}
spec:
  type: "{{ nextcloud.redis.serviceType }}"
  ports:
    - port: 6379
      protocol: TCP
      name: redis
  selector:
    {{ service.selector | to_nice_yaml | indent(4) }}
