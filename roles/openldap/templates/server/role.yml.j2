apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: "{{ openldap.server.name }}"
  namespace: "{{ common.namespace }}"
  labels:
    {{ service.extraLabels | to_nice_yaml | indent(4) }}
rules:
  - apiGroups:
      - "extensions"
    resources:
      - "podsecuritypolicies"
    verbs:
      - "use"
    resourceNames:
      - "{{ openldap.server.name }}"
