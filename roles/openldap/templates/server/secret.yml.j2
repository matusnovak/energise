apiVersion: v1
kind: Secret
metadata:
  name: "{{ openldap.server.name }}"
  namespace: "{{ common.namespace }}"
  labels:
    {{ service.extraLabels | to_nice_yaml | indent(4) }}
type: "Opaque"
data:
  password: "{{ openldap.server.password | b64encode }}"
  readonlyPassword: "{{ openldap.server.readonlyPassword | b64encode }}"
